.search-input{
	padding: 20rpx;
}
.search-input>input{
	background-color: #f4f4f4;
	border-radius: 20rpx;
}
.topic-search{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	font-size: 30rpx;
}
/* 轮播图 */
.topic-swiper{
	padding: 0 20rpx 20rpx 20rpx;
}
.topic-swiper>image{
	width: 100%;
	border-radius: 10rpx;
}
/* 热门分类 */
.topic-heat{
	padding: 20rpx;
	border-bottom: 1rpx solid #B7B7B733;
}
.topic-heat .topic-heat-more>view:nth-child(1){
	font-size: 30rpx;
}
.topic-heat-more>view:nth-child(2){
	color: #DDDDDD;
}
.topic-heat-more>view:nth-child(2)>view{
	font-size: 25rpx;
}
/* 最近更新 */
.topic-update{
	padding: 20rpx;
}
.topic-update>view:first-child{
	font-size: 30rpx;
}


